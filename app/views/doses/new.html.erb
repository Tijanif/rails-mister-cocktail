<div class="container">
  <h2>Create a dose for you cocoktail</h2>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description, :label => "Quantity", :placeholder => "TYPE HERE" %>
    <%= f.submit "Add an ingredient", class: "btn btn-success"%>
<% end %>
</div>
