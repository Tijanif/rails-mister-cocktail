<Div class="cocktailnames">
  <h2><%= @cocktail.name %></h2>
  <h2><%= @cocktail.description %></h2>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, class: "cocktailshowimage" %>
</Div>

<div class="dose">
  <% @cocktail.doses.each do |dose| %>
    <p class="doseinfo"><%= dose.ingredient.name %> => <%= dose.description %></p>
    <%= link_to dose_path(dose), method: :delete do %>
      <%= image_tag("dustbin.png", height: '16', width: '16') %>
    <% end %>
    <br>
  <% end %>
</div>
<div class="btncontainer">
  <%= link_to "Add Dose",  new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
  <%= link_to "Go back to Cocktails", cocktails_path, class: "btn btn-primary" %>
  <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger" %>
</div>
