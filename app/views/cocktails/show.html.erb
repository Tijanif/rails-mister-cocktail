<h2><%= @cocktail.name %></h2>
<h2><%= @cocktail.description %></h2>
<%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>


<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %> => <%= dose.description %>
  <%= link_to dose_path(dose), method: :delete do %>
    <%= image_tag("dustbin.png", height: '16', width: '16') %>
  <% end %>
  <br>
<% end %>

<%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %>
<%= link_to "Go back to cocktails", cocktails_path %>
<%= link_to "delete cocktail", cocktail_path(@cocktail), method: :delete %>
