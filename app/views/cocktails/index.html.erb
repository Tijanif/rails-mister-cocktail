



<div class="container">
  <div class="home-page-text">
    <h1>Welcome to Pink Tales</h1>
  <p> The home of everything Cocktail</p>
  </div>
  <br>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <!-- <img src="https://source.unsplash.com/user/erondu" alt="Pictures" style="width: 100%; height: 75%;"> -->
          <%= cl_image_tag cocktail.photo, class: "cocktailimage" %>
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail-text" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %>

</div>
