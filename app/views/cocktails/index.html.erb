
<div class="container">
  <h2 class="home-page-title">Welcome to Pink Tales:</h2>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <img src="https://source.unsplash.com/user/erondu" alt="Pictures" style="width: 100%; height: 75%;">
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail-text" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add new cocktail", new_cocktail_path %>

</div>
